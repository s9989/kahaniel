{% extends 'document/base.html.twig' %}

{% block title %}New document{% endblock %}

{% form_theme form _self %}

{%- block form_errors -%}
    <span class="error">
    {%- if errors|length > 0 -%}
        <ul>
            {%- for error in errors -%}
                <li>{{ error.message }}</li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
    </span>
{%- endblock form_errors -%}

{% block body %}
<section>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
</section>
{% endblock %}
