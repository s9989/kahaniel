{% extends 'base.html.twig' %}

{% block title %}Nowy dokument - {{ parent() }}{% endblock %}

{% form_theme form _self %}

{%- block form_errors -%}
    <span class="error {% if errors|length > 0 %}visible{% endif %}">
    {%- if errors|length > 0 -%}
        <ul>
            {%- for error in errors -%}
                <li>{{ error.message }}</li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
    </span>
{%- endblock form_errors -%}

{%- block form_row -%}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}
    <div {% with {attr: row_attr|default({})} %}{{ block('attributes') }}{% endwith %}>
        {{- form_label(form) -}}
        {{- form_widget(form, widget_attr) -}}
        {{- form_errors(form) -}}
        {{- form_help(form) -}}
    </div>
{%- endblock form_row -%}

{% block head %}
    <nav>
        <div class="lefty">
            <a href="{{ url('documents') }}"><i class="material-icons">arrow_back</i></a>
        </div>
    </nav>
{% endblock %}

{% block body %}
<section>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
</section>
{% endblock %}
