{% extends 'empty.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('css/login') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('js/login') }}
{% endblock %}

{% block body %}
    <form action="{{ path('login') }}" method="post" class="login{% if not error %} enter{% endif %}">
        {% if error %}
            <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <input placeholder="login" type="text" id="username" name="_username" value="{{ last_username }}" autofocus>
        <input placeholder="hasÅ‚o" type="password" id="password" name="_password">
        <input class="button" type="submit" value="Zaloguj">
    </form>
{% endblock %}
